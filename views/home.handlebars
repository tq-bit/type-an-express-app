<section class='container'>
  <article class='row'>
    <div class='col-1 col-md-2 col-lg-3'></div>
    <div class='col'>
      <div class='card'>
        <div class='card-header'>
          <h2 class="h4">Get a random programming joke</h2>
        </div>
        <div class='card-body'>
          {{> joke joke=randomJoke}}
        </div>
        <footer class='card-footer bg-light d-flex justify-content-between'>
          <small>
            Jokes are fetched from <a href="https://jokeapi.dev/">https://jokeapi.dev/</a>.
          </small>
        </footer>
      </div>
    </div>
    <div class='col-1 col-md-2 col-lg-3'></div>
  </article>

  <article class='row'>
    <div class='col-1 col-md-2 col-lg-3'></div>
    <div class='col'>
      <div class="d-flex justify-content-between mt-2">
        <a href="/search">
          <button class="btn btn-outline-primary ">Search for jokes</button>
        </a>
        <button class="btn btn-outline-secondary" onclick="window.location.reload()">Get another</button>
      </div>

    </div>
    <div class='col-1 col-md-2 col-lg-3'></div>
  </article>
</section>